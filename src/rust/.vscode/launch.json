{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Debug pipelinr",
            "type": "lldb",
            "request": "launch",
            "program": "/usr/lib64/R/bin/Rscript",
            "args": [
                "-e",
                "source('./debug.R')"
            ],
            "env": {
                "R_HOME": "/usr/lib64/R",
                "PARALLEL_SSH": "ssh -F ../../../../test/ssh.config"
            },
            "terminal": "console",
            "stopOnEntry": false
        }
    ]
}