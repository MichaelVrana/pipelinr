{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Debug engine",
            "type": "lldb",
            "request": "launch",
            "program": "/usr/lib64/R/bin/exec/R",
            "args": [
                "--vanilla",
                "-e",
                "source('./debug.R')"
            ],
            "env": {
                "R_HOME": "/usr/lib64/R"
            },
            "terminal": "console",
            "stopOnEntry": false
        }
    ]
}